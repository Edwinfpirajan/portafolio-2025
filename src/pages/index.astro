---
import DesktopLayout from '../layouts/DesktopLayout.astro';
import MobileLayout from '../layouts/MobileLayout.astro';
// import Icon from '../components/desktop/Icon.astro'; // lo agregaremos luego
---

<!-- Escritorio (md y superior) -->
<div class="hidden md:block">
  <DesktopLayout>
    <!-- Espacio para íconos o ventanas en versión escritorio -->
    <div class="absolute top-10 left-10">
      <!-- Aquí podrás insertar <Icon /> más adelante -->
    </div>
  </DesktopLayout>
</div>

<!-- Móvil (sm y md-) -->
<div class="block md:hidden">
  <MobileLayout>
    <!-- Contenido móvil temporal -->
    <p class="text-sm text-center font-retro p-4">
      📱 Esta es la versión móvil de mi portafolio retro. Pronto podrás navegar entre apps.
    </p>
  </MobileLayout>
</div>
